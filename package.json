{
  "private": "true",
  "workspaces": {
    "packages": [
      "./packages/main",
      "./packages/app1",
      "./packages/app2",
      "./packages/common"
    ]
  },
  "scripts": {
    "dev:main": "yarn --cwd packages/main run dev",
    "build:main": "yarn --cwd packages/main run build",
    "dev:app1": "yarn --cwd packages/app1 run dev",
    "build:app1": "yarn --cwd packages/app1 run build",
    "dev:app2": "yarn --cwd packages/app2 run dev",
    "build:app2": "yarn --cwd packages/app2 run build"
  }
}
